<div>
    <label>Title</label>
    <input type="text" name="title" value="<%=product.title%>">
</div>

<div>
    <label>Creator</label>
    <input type="text" name="creator" value="<%=product.creator%>">
</div>

<div>
    <label>Description</label>
    <textarea type="text" name="description"><%=product.description%></textarea>
</div>

<div>
    <label>Name</label>
    <input type="text" name="name" value="<%=product.name%>">
</div>

<div>
    <label>Price</label>
    <input type="text" name="price" value="<%=product.price%>">
</div>

<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%=product.publishDate == null ? "" : product.publishDate.toISOString().split("T")%>">
</div>

<div>
    <label>Tags</label>
    <input type="text" name="tags" value="<%=product.tags%>">
</div>

<div>
    <label>Cover</label>
    <input type="file" name="cover">
</div>